<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btn_bio"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="220dp"
        android:editable="false"
        android:onClick="Biodata"
        android:text="Biodata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lv"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="68dp"
        android:text="List View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_bio"
        app:layout_constraintTop_toTopOf="@+id/btn_bio" />

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="57dp"
        android:text="Register"
        app:layout_constraintStart_toStartOf="@+id/btn_bio"
        app:layout_constraintTop_toBottomOf="@+id/btn_bio" />

    <Button
        android:id="@+id/btn_recyc"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Recycler View"
        app:layout_constraintEnd_toEndOf="@+id/btn_lv"
        app:layout_constraintStart_toStartOf="@+id/btn_lv"
        app:layout_constraintTop_toTopOf="@+id/btn_reg" />

    <Button
        android:id="@+id/btn_frag"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="57dp"
        android:text="Fragment"
        app:layout_constraintStart_toStartOf="@+id/btn_reg"
        app:layout_constraintTop_toBottomOf="@+id/btn_reg" />

    <Button
        android:id="@+id/btn_intn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="56dp"
        android:text="Implicit Intent"
        app:layout_constraintStart_toEndOf="@+id/btn_frag"
        app:layout_constraintTop_toBottomOf="@+id/btn_recyc" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:text="Camera"
        app:layout_constraintEnd_toEndOf="@+id/btn_frag"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_frag"
        app:layout_constraintTop_toBottomOf="@+id/btn_frag" />

</androidx.constraintlayout.widget.ConstraintLayout>